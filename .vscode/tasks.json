{
	"version": "2.0.0",
	"options": {
		"cwd": "${workspaceFolder}/build"
	},
	"tasks": [
		{
			"type": "shell",
			"label": "cmake",
			"command": "cmake",
			"group": {
				"kind":"build",
			},
			"args": [
				".."
			],
			"dependsOn":[
				"builddir"
			]

		},{
			"type": "shell",
			"label": "builddir",
			"command": "./build.sh",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind":"build",
			},
		},
		{
			"label": "make",
			"type": "shell",
			"group": {
				"kind": "build",
			},
			"command": "make",
			"dependsOn":[
				"cmake"
			]
		},
		{
			"label": "run",  
			"type": "shell",
			"dependsOn":[
				"make",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": "./OpenGL",
		}
	]
}